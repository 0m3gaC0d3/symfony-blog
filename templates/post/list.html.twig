{% extends 'base.html.twig' %}

{% block body %}
    <h1>All posts</h1>
    <ul>
        {% for post in posts %}
            <li>
                <a href="{{ path('post_show', {'slug': post.slug}) }}">
                    {{ post.title }}
                </a>
            </li>
        {% endfor %}
    </ul>
{% endblock %}