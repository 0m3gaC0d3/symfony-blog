{% extends 'layouts/module.html.twig' %}

{% block subtitle %} | Edit a post{% endblock %}

{% block body %}
    <a class="btn btn-secondary pull-right" href="{{ path('backend_post_list') }}"><i class="fa fa-arrow-left"></i> back to list</a>
    <h1>Edit post with id {{ post.id }} ({{ post.title }})</h1>
    {{ form_start(form, {'action': path('backend_post_update', {'id': post.id })}) }}
        <div class="row">
            <div class="col-9">
                <fieldset class="form-group">
                    {{ form_label(form.title) }}
                    {{ form_errors(form.title) }}
                    {{ form_widget(form.title) }}
                </fieldset>
                <fieldset class="form-group">
                    {{ form_label(form.teaser) }}
                    {{ form_errors(form.teaser) }}
                    {{ form_widget(form.teaser) }}
                </fieldset>
                <fieldset class="form-group">
                    {{ form_label(form.body) }}
                    {{ form_errors(form.body) }}
                    {{ form_widget(form.body) }}
                </fieldset>
            </div>
            <div class="col-3">
                <fieldset class="form-group">
                    {{ form_label(form.slug) }}
                    {{ form_errors(form.slug) }}
                    {{ form_widget(form.slug) }}
                </fieldset>
                <fieldset class="form-group">
                    {{ form_label(form.hidden) }}
                    {{ form_errors(form.hidden) }}
                    {{ form_widget(form.hidden) }}
                </fieldset>
                <fieldset class="form-group">
                    {{ form_label(form.enableComments) }}
                    {{ form_errors(form.enableComments) }}
                    {{ form_widget(form.enableComments) }}
                </fieldset>
                <fieldset class="form-group">
                    {{ form_label(form.tags) }}
                    {{ form_errors(form.tags) }}
                    {{ form_widget(form.tags) }}
                </fieldset>
                <button type="submit" class="btn btn-primary btn-block">
                    <i class="fa fa-plus"></i> Update post
                </button>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}